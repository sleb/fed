{
  "name": "functions",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "node test-runner.js",
    "test:emulator": "firebase emulators:start --only firestore,functions --project demo-test-project",
    "test:simple": "firebase emulators:exec --only firestore --project demo-test-project \"node test/simple.test.js\"",
    "test:email": "node test/email.test.js",
    "test:all": "npm run test:email && npm run test:simple"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^6.4.0",
    "resend": "^3.2.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
